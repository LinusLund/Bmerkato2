@model HomeViewModel

<section class="up-to-sell">
    <div class="container">
        <div class="collection-grid">
            <div class="item-1">
                @foreach (var product in Model.NewProducts.Take(1))
                {
                    <a href="/products/@product.ArticleNumber" class="collection-item">
                        <img src=@product.ImageUrl alt="~/images/placeholders/270x295.svg">
                        <div class="body">
                            <div class="title">@product.ProductName</div>
                            <div class="info">
                                <div class="price">@product.ProductPrice.ToString("C")</div>
                                <i class="add-cart fa-regular fa-cart-plus"></i>
                            </div>
                        </div>
                    </a>
                }

            </div>
            <div class="discover">
                <div class="collection-content">
                    <div class="container">
                        <div class="title-red">UP TO SELL</div>
                        <div class="title">50% OFF</div>
                        <div class="ingress">Get the Best Price</div>
                        <div class="text">Get the best daily offer et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren no sea taki</div>
                        <a href="#" class="link">Discover More</a>
                    </div>
                </div>

            </div>
            <div class="item-2">

                @foreach (var product in Model.NewProducts.Take(1))
                {
                    <a href="#" class="collection-item">
                        <img src=@product.ImageUrl alt="~/images/placeholders/270x295.svg">
                        <div class="body">
                            <div class="title">@product.ProductName</div>
                            <div class="info">
                                <div class="price">@product.ProductPrice.ToString("C")</div>
                                <i class="add-cart fa-regular fa-cart-plus"></i>
                            </div>
                        </div>
                    </a>
                }

            </div>
        </div>
    </div>
</section>